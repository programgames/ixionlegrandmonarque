{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <main role="main">

        <div class="container marketing">

            <div class="row">

                {% for key, summonerMiamInfo in teamMiam %}
                    <div class="col-md-4">
                        <img src="{{  summonerMiamInfo.summonerInfo.iconUrl }}" class="summoner-image rounded d-block mx-auto" alt="...">
                        <h2>{{ key }}</h2>
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ summonerMiamInfo.summonerInfo.name }}
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Niveaux
                                <span class="badge badge-primary badge-pill">{{ summonerMiamInfo.summonerInfo.summonerLevel }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {% if summonerMiamInfo.gameInfo %}
                              <p>En game : Oui</p>
                                {% else %}
                                    <p>En game : Non</p>
                                {% endif %}
                            </li>
                        </ul>
                        <div class="div-button-profile">
                            <p class="text-center"><a class="btn btn-secondary btn-block" href="{{ 'http://euw.op.gg/summoner/userName=' ~ summonerMiamInfo.summonerInfo.name }}" role="button">Voir le profil &raquo;</a></p>
                        </div>
                    </div>
                {% endfor %}

            </div><!-- /.row -->


        <!-- FOOTER -->
        <footer class="container">
            <p class="float-right"><a href="#">Back to top</a></p>
            <p>&copy; 2017-2018 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </footer>
    </main>
{% endblock %}
